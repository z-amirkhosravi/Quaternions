{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cppbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-std=gnu++2b",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/bin/mainrun"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/gcc"
        }
    ]
}